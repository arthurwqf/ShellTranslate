<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">10sp</item>
    </style>

    <!--toolbar popup menu样式 -->
    <style name="ToolbarPopupMenuTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/toolbar_popup_menu_bg</item>
    </style>

    <style name="ToolbarTitleTheme" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!--toolbar 样式-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
    </style>

</resources>
