<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ItemLinearLayoutView">
        <attr name="background_color" />
        <attr name="concave_angle" />
    </declare-styleable>
    <attr name="background_color" format="color" />
    <attr name="concave_angle" format="integer">
        <flag name="no" value="-1" />
        <flag name="top" value="0" />
        <flag name="bottom" value="1" />
    </attr>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" format="integer"/>
        <attr name="indicator_type" />
        <attr name="normalTextColor" format="color"/>
        <attr name="highLightTextColor" format="color"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
    </declare-styleable>
    <attr name="indicator_type" format="integer">
        <flag name="triangle" value="0" />
        <flag name="rectangle" value="1" />
        <flag name="line" value="2" />
    </attr>
</resources>
